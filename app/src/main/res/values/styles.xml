<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:textColorHint">@color/secondary_text</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:editTextColor">@color/primary_text</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:textSize">@dimen/font_normal</item>
    <item name="android:windowAnimationStyle">@style/ActivityLoadAnimation</item>
    <!-- 侧滑菜单样式 -->
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
  </style>

  <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@color/white</item>
  </style>

  <style name="AppTheme.NoActionBar" parent="AppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="BaseAlertDialog" parent="AlertDialog.AppCompat.Light">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:backgroundDimAmount">0.6</item>
    <item name="android:windowCloseOnTouchOutside">true</item>
    <item name="android:windowAnimationStyle">@style/DialogAnimation_Scale</item>
  </style>

  <style name="DialogNoBackground" parent="BaseAlertDialog">
    <item name="android:windowBackground">@color/transparent</item>
  </style>

  <style name="DialogAnimation_Scale" parent="android:Animation">
    <item name="android:windowEnterAnimation">@anim/anim_scale_in_dialog</item>
    <item name="android:windowExitAnimation">@anim/anim_scale_out_dialog</item>
  </style>
  <!-- activity跳转动画时间 -->
  <integer name="anim_activity_in_out_duration">@android:integer/config_shortAnimTime</integer>

  <style name="ActivityLoadAnimation" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_activity</item>
    <item name="android:activityOpenExitAnimation">@anim/slide_out_left_activity</item>
    <item name="android:activityCloseEnterAnimation">@anim/slide_in_left_activity</item>
    <item name="android:activityCloseExitAnimation">@anim/slide_out_right_activity</item>
  </style>
</resources>
