<resources>
  <declare-styleable name="InputEdit">
    <!-- 对应EditText的hint -->
    <attr format="reference|string" name="input_hint"/>
    <!-- 对应EditText的背景 -->
    <attr format="reference" name="background"/>
    <!-- 对应删除按钮图片 -->
    <attr format="reference" name="deleteIcon"/>
    <!-- 对应EditText的imeOptions -->
    <attr format="enum" name="input_imeOptions">
      <enum name="actionDone" value="1"/>
      <enum name="actionNext" value="2"/>
      <enum name="actionSearch" value="3"/>
      <enum name="actionSend" value="4"/>
    </attr>
  </declare-styleable>
</resources>